    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/morgan": "^1.9.3",
        "@types/nunjucks": "^3.1.5",
        "eslint": "^7.32.0",
        "nodemon": "^2.0.12",
        "ts-node": "^10.2.0",
        "typescript": "^4.3.5"
    },
